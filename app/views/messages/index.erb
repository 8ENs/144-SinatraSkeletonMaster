<a href="/messages/new">Post a message... It's FREE (for now)!</a>

<% @messages.each do |message| %>
  <div class="message">
    <h3><a href="/messages/<%= message.id %>"><%= message.title %></a> <small>(by: <%= message.author %>)</small></h3>
    <p>
      <%= message.content %> 

      <!-- only display if url field exists -->
      <% unless message.url.to_s.empty? %>
        <a href="<%= message.url %>" target="_blank"><small>(url)</small></a>
      <% end %>

    </p>
  </div>
<% end %>